<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dcrf.httpListen=127.0.0.1:8441 -Dcrf.numberOfThreads=32 -classpath %classpath org.mediacloud.crfutils.WebServerHandler</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dcrf.httpListen=127.0.0.1:8441 -Dcrf.numberOfThreads=32 -classpath %classpath org.mediacloud.crfutils.WebServerHandler</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dcrf.httpListen=127.0.0.1:8441 -Dcrf.numberOfThreads=32 -classpath %classpath org.mediacloud.crfutils.WebServerHandler</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
